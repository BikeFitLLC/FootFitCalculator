<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/backgroundColor</item>
        <item name="android:textColor">@color/enabledText</item>
        <item name="android:textSize">18sp</item>
        <item name="buttonStyle">@style/Button</item>
    </style>

    <style name="TitleBar">
        <item name="android:background">@color/titlebarBackground</item>
    </style>

    <style name="TitleBar.ThemeOverlay" parent="">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlHighlight">#3fff</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TitleBar.PopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BaseButton">
        <!-- Overridden for v21 to remove button shadows -->
    </style>

    <style name="Button" parent="BaseButton">
        <item name="android:background">@drawable/primary_button</item>
        <item name="android:textColor">@color/borderless_button_text_color</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="Button.Focus">
        <item name="android:background">@drawable/focus_button</item>
        <item name="android:minHeight">52dp</item>
    </style>

    <style name="BorderlessButton">
        <item name="android:background">@drawable/borderless_button</item>
        <item name="android:textColor">@color/borderless_button_text_color</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:minWidth">350dp</item>
        <item name="android:maxWidth">400dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!-- Dialog styles -->
    <style name="WedgeDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:colorBackgroundCacheHint">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@color/dialogBackground</item>
    </style>

    <style name="Button.Dialog">
        <item name="android:background">@drawable/dialog_button</item>
        <item name="android:minWidth">150dp</item>
        <item name="android:maxWidth">200dp</item>
    </style>

</resources>