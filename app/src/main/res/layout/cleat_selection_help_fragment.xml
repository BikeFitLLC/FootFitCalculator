<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/app_margins"
        android:layout_marginLeft="@dimen/app_margins"
        android:layout_marginRight="@dimen/app_margins"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/app_margins"
            android:layout_weight="1"
            android:text="@string/cleat_selection_help_fragment_instruction_label" />

        <Button
            android:id="@+id/cleat_selection_help_fragment_get_fitted_button"
            style="@style/Button.Focus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cleat_selection_help_fragment_get_fitted_button_label" />

    </LinearLayout>

</LinearLayout>